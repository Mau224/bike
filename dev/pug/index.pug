extends layout/main

block variables
	-var title = 'Главная страница'

block content
	section
		.advantages
			a(id="advantages")
			h2 Несколько фактов о нас
			ul.advantages__list
				li.advantages__item
					h3 01
					p Самый широкий выбор велосипедов!
				li.advantages__item
					h3 02
					p Доставка велосипедов по всей России!
				li.advantages__item
					h3 03
					p Большой выбор крутых аксессуаров!
				li.advantages__item
					h3 04
					p Профессиональные консультации!
	section
		.types
			a(id="type")
			h2 Виды велосипедов
			.types__block
				.types__block-item.types__block-item--first
					picture
						source(type="image/webp" media="(min-width: 1024px)" srcset="images/content/bike-1.webp 1x, images/content/bike-1@2x.webp 2x")
						source(type="image/webp" media="(max-width: 1023px)" srcset="images/content/bike-1-tab.webp 1x, images/content/bike-1-tab@2x.webp 2x")
						img(src="images/content/bike-1.jpg" srcset="images/content/bike-1@2x.jpg" width="342" height="503" alt="картинка велосипеда")
					p Дорожный велосипед

				.types__block-item.types__block-item--center
					picture
						source(type="image/webp" media="(min-width: 1024px)" srcset="images/content/bike-2.webp 1x, images/content/bike-2@2x.webp 2x")
						source(type="image/webp" media="(max-width: 1023px)" srcset="images/content/bike-2-tab.webp 1x, images/content/bike-2-tab@2x.webp 2x")
						img(src="images/content/bike-2.jpg" srcset="images/content/bike-2@2x.jpg" width="342" height="566" alt="картинка велосипеда")
					p Горный велосипед

				.types__block-item.types__block-item--last
					picture
						source(type="image/webp" media="(min-width: 1024px)" srcset="images/content/bike-3.webp 1x, images/content/bike-3@2x.webp 2x")
						source(type="image/webp" media="(max-width: 1023px)" srcset="images/content/bike-3-tab.webp 1x, images/content/bike-3-tab@2x.webp 2x")
						img(src="images/content/bike-3.jpg" srcset="images/content/bike-3@2x.jpg" width="342" height="512" alt="картинка велосипеда")
					p Детский велосипед
	section
		.video
			a(id="video")
			.video__wrapper
				.video__block
					h2 Видео про велосипеды
					p В этом видео мы подробно расскажем про особенности выбора велосипеда для себя.
					.video__content-block
						picture
							source(type="image/webp" media="(min-width: 1024px)" srcset="images/content/bike-video.webp 1x, images/content/bike-video@2x.webp 2x")
							source(type="image/webp" media="(max-width: 767px)" srcset="images/content/bike-video-mob.webp 1x, images/content/bike-video-mob@2x.webp 2x")
							source(type="image/webp" media="(max-width: 1023px)" srcset="images/content/bike-video-tab.webp 1x, images/content/bike-video-tab@2x.webp 2x")
							img(src="images/content/bike-video.jpg" srcset="images/content/bike-video@2x.jpg"  width="929"
							height="522" alt="видео про велосипед")
	section
		.map
			a(id="map")
			.map__wrapper
				h2 Как нас найти?
				p Мы находимся по адресу: Санкт-Петербург, ул. Большая Конюшенная, д. 19
				.map__block
					picture
						source(type="image/webp" media="(min-width: 1024px)" srcset="images/content/map.webp 1x, images/content/map@2x.webp 2x")
						source(type="image/webp" media="(max-width: 767px)" srcset="images/content/map-mob.webp 1x, images/content/map-mob@2x.webp 2x")
						source(type="image/webp" media="(max-width: 1023px)" srcset="images/content/map-tab.webp 1x, images/content/map-tab@2x.webp 2x")
						img(class="map__main" src="images/content/map.jpg" srcset="images/content/map@2x.jpg"  width="957"
							height="530" alt="карта")
